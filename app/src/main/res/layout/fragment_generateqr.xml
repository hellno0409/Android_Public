<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generateqr">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/qrgeneratorimg"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/qrstring"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="196dp"
        android:layout_marginRight="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrgeneratorimg" />

    <Button
        android:id="@+id/generateqrbtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:text="Generate QR"
        app:layout_constraintEnd_toEndOf="@+id/qrgeneratorimg"
        app:layout_constraintStart_toStartOf="@+id/qrgeneratorimg"
        app:layout_constraintTop_toBottomOf="@+id/qrstring" />


</androidx.constraintlayout.widget.ConstraintLayout>